<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyBuddy.TipsPage"
             Title="Study Tips"
             BackgroundColor="{StaticResource LightGray}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Border BackgroundColor="{StaticResource Primary}"
                    StrokeThickness="0"
                    Padding="20"
                    Shadow="{Shadow Brush=Black, Opacity=0.1, Radius=8, Offset='0,2'}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="8">
                    <Label Text="💡 Study Tips"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                    <Label Text="Helpful advice for better studying"
                           FontSize="14"
                           TextColor="White"
                           Opacity="0.9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout x:Name="TipsStackLayout" 
                               Spacing="12" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>